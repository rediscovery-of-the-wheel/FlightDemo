<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/right_panel"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_weight="1">

	<ImageView
		android:id="@+id/right_stick_image"
		android:layout_width="@dimen/stick_size"
		android:layout_height="@dimen/stick_size"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:src="@mipmap/ic_stick_top" />

	<RelativeLayout
		android:id="@+id/forward_feedback_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/right_stick_image"
		android:layout_centerHorizontal="true"
		android:padding="@dimen/padding_cmd_feedback"
		android:gravity="center"
		android:background="@drawable/cmd_feedback">
		<TextView
			android:id="@+id/forward_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/stick_text_forward"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/text_sz_button"
			android:gravity="center"
			android:textColor="@color/THISTLE"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/right_feedback_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toEndOf="@+id/right_stick_image"
		android:layout_toRightOf="@+id/right_stick_image"
		android:padding="@dimen/padding_cmd_feedback"
		android:gravity="center"
		android:background="@drawable/cmd_feedback">
		<TextView
			android:id="@+id/right_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/stick_text_right"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/text_sz_button"
			android:gravity="center"
			android:textColor="@color/THISTLE"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/back_feedback_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/right_stick_image"
		android:layout_centerHorizontal="true"
		android:padding="@dimen/padding_cmd_feedback"
		android:gravity="center"
		android:background="@drawable/cmd_feedback">
		<TextView
			android:id="@+id/back_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/stick_text_back"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/text_sz_button"
			android:gravity="center"
			android:textColor="@color/THISTLE"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/left_feedback_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/right_stick_image"
		android:layout_toStartOf="@+id/right_stick_image"
		android:padding="@dimen/padding_cmd_feedback"
		android:gravity="center"
		android:background="@drawable/cmd_feedback">
		<TextView
			android:id="@+id/left_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/stick_text_left"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/text_sz_button"
			android:gravity="center"
			android:textColor="@color/THISTLE"/>
	</RelativeLayout>
</RelativeLayout>
